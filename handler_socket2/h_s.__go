	if false && compression_enable && (compression_threshold <= 0 || len(data) > compression_threshold) {

		var b bytes.Buffer
		w, _ := flate.NewWriter(&b, 2)
		w.Write([]byte(data))
		w.Close()

		bytes := b.Bytes()

		resp += "Content-Encoding: gzip / " + strconv.Itoa(len(data)) + "\r\n"
